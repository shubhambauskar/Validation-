<div class="jumborton col-xs-8 col-xs-offset-2">
    <div class="container"> 
        <h1>All Articles</h1>



    <% @articles.each do |article| %>
                <div class = "article-title">
                    <%= link_to article.title, article_path(article) %>
                </div>
                <div class= "article-body">
                    <%= truncate(article.description, length:100) %><br>    
                    <%= article.categories %>
                    <%= article.start_date %>
                    <%= article.end_date %> <br>
                    <%= article.locations %><br>
                </div>
                <div class="article_actions">
                  <%= link_to "Edit This article", edit_article_path(article), class: "btn btn-xs btn-primary" %>
                  <%= link_to "Delete This article", article_path(article), 
                      method: :delete,
                      data: { comfirm: "Are you sure you want to delete the article?"}, 
                      class: "btn btn-xs btn-danger" %>
                </div>
         <% end %>    
    </div>
</div>

   
